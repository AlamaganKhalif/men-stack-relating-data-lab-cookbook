<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>New Recipe</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Add a New Recipe</h1>

  <form action="/recipes" method="POST">
    <label for="name">Recipe Name:</label><br>
    <input type="text" name="name" required><br><br>

    <label for="instructions">Instructions:</label><br>
    <textarea name="instructions" rows="5" cols="40"></textarea><br><br>

    <% if (ingredients && ingredients.length > 0) { %>
      <label for="ingredients">Select Ingredients:</label><br>
      <% ingredients.forEach(ingredient => { %>
        <input type="checkbox" name="ingredients" value="<%= ingredient._id %>">
        <%= ingredient.name %><br>
      <% }) %>
    <% } else { %>
      <p>No ingredients available. Add some first.</p>
    <% } %>

    <button type="submit">Create Recipe</button>
  </form>
</body>
</html>

